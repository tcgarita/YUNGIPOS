<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderSectionFragment">

    <View
        android:id="@+id/View01"
        android:layout_width="match_parent"
        android:layout_height="748dp"
        android:background="#88000000" />

    <View
        android:id="@+id/view1"
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:background="@color/white" />

    <View
        android:id="@+id/View02"
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:background="@drawable/back_border" />

    <View
        android:id="@+id/view2"
        android:layout_width="600dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:background="@color/blue" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90dp"
        android:text="@string/number_input_title_1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="italic|normal" />

    <TextView
        android:id="@+id/textView0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="160dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/green"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="280dp"
        android:text="@string/number_input_title_2"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="40sp" />

    <Button
        android:id="@+id/NumberButton0"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_marginLeft="480dp"
        android:layout_marginTop="570dp"
        android:text="0"
        android:textSize="40sp" />

    <Button
        android:id="@+id/NumberButton1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="480dp"
        android:layout_marginTop="490dp"
        android:text="1"
        android:textSize="40sp" />

    <Button
        android:id="@+id/NumberButton2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="560dp"
        android:layout_marginTop="490dp"
        android:text="2"
        android:textSize="40sp" />

    <Button
        android:id="@+id/NumberButton3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="640dp"
        android:layout_marginTop="490dp"
        android:text="3"
        android:textSize="40sp" />

    <Button
        android:id="@+id/NumberButton4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="480dp"
        android:layout_marginTop="410dp"
        android:text="4"
        android:textSize="40sp" />

    <Button
        android:id="@+id/NumberButton5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="560dp"
        android:layout_marginTop="410dp"
        android:text="5"
        android:textSize="40sp" />

    <Button
        android:id="@+id/NumberButton6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="640dp"
        android:layout_marginTop="410dp"
        android:text="6"
        android:textSize="40sp" />

    <Button
        android:id="@+id/NumberButton7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="480dp"
        android:layout_marginTop="330dp"
        android:text="7"
        android:textSize="40sp" />

    <Button
        android:id="@+id/NumberButton8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="560dp"
        android:layout_marginTop="330dp"
        android:text="8"
        android:textSize="40sp" />

    <Button
        android:id="@+id/NumberButton9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="640dp"
        android:layout_marginTop="330dp"
        android:text="9"
        android:textSize="40sp" />

    <Button
        android:id="@+id/NumberButtonBack"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="720dp"
        android:layout_marginTop="330dp"
        android:text="更正"
        android:textSize="27sp" />

    <Button
        android:id="@+id/NumberButtonEnter"
        android:layout_width="80dp"
        android:layout_height="240dp"
        android:layout_marginLeft="720dp"
        android:layout_marginTop="410dp"
        android:text="確定"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/TextViewEdit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="220dp"
        android:gravity="center"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/red"
        android:textSize="40sp" />

    <View
        android:id="@+id/View03"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="265dp"
        android:background="@color/lightBlack" />

    <ImageButton
        android:id="@+id/ButtonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="885dp"
        android:layout_marginTop="83dp"
        android:background="@null"
        android:src="@drawable/delete_btn_press" />

    <Button
        android:id="@+id/ButtonDiscount"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="87dp"
        android:background="@drawable/pay_button"
        android:text="折扣"
        android:textColor="@color/white"
        android:textSize="27sp" />

    <FrameLayout
        android:id="@+id/frameDiscount"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="140dp" >

        <View
            android:id="@+id/View04"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:background="@color/white" />

        <Button
            android:id="@+id/ButtonDiscount0"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:text="9折"
            android:textSize="30sp" />

        <Button
            android:id="@+id/ButtonDiscount1"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="60dp"
            android:text="8折"
            android:textSize="30sp" />

        <Button
            android:id="@+id/ButtonDiscount2"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="120dp"
            android:text="招待"
            android:textSize="30sp" />

    </FrameLayout>

</FrameLayout>